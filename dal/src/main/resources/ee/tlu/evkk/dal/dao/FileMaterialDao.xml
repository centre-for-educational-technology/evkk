<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ee.tlu.evkk.dal.dao.FileMaterialDao">

  <sql id="fileMaterialColumns">
    mtype.id = fm_id,
    mtype.file_path = fm_file_path,
    mtype.file_size = fm_file_size,
    mtype.file_format = fm_file_format,
    mtype.material_id = fm_material_id
  </sql>

  <resultMap id="FileMaterialResultMap" type="ee.tlu.evkk.dal.dto.FileMaterial">
    <id property="id" column="fm_id"/>
    <result property="filePath" column="fm_file_path"/>
    <result property="fileSize" column="fm_file_size"/>
    <result property="fileFormat" column="fm_file_format"/>
    <result property="materialId" column="fm_material_id"/>
    <association property="material" resultMap="ee.tlu.evkk.dal.dao.MaterialDao.MaterialResultMap"/>
  </resultMap>

  <select id="findAllFileMaterials" resultMap="FileMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.FileMaterialDao.fileMaterialColumns"/>,
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.file_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
  </select>

  <select id="findById" parameterType="string" resultMap="FileMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.FileMaterialDao.fileMaterialColumns"/>,
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.file_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
    WHERE fm.id = #{id}
  </select>

  <insert id="insertFileMaterial" parameterType="ee.tlu.evkk.dal.dto.FileMaterial" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO core.file_material (
      file_path,
      file_size,
      file_format,
      material_id
    ) VALUES (
      #{filePath},
      #{fileSize},
      #{fileFormat},
      #{materialId}
    )
  </insert>

</mapper>
