<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ee.tlu.evkk.dal.dao.CategoryDao">
  <sql id="materialCategoryJoin">
    LEFT JOIN core.material_category mc ON m.id = mc.material_id
    LEFT JOIN core.category cat ON cat.id = mc.category_id
  </sql>

  <sql id="exerciseCategoryJoin">
    LEFT JOIN core.exercise_category ec ON ex.id = ec.exercise_id
    LEFT JOIN core.category cat ON cat.id = ec.category_id
  </sql>

  <sql id="categoryColumns">
    cat.id AS cat_id,
    cat.name AS cat_name
  </sql>

  <resultMap id="CategoryResultMap" type="ee.tlu.evkk.dal.dto.Category">
    <id property="id" column="cat_id"/>
    <result property="name" column="cat_name"/>
  </resultMap>

  <select id="findAllCategories" resultType="ee.tlu.evkk.dal.dto.Category">
    SELECT id, name FROM core.category
  </select>

  <select id="findById" parameterType="lONg" resultType="ee.tlu.evkk.dal.dto.Category">
    SELECT id, name FROM core.category WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="ee.tlu.evkk.dal.dto.Category">
    INSERT INTO category (name) VALUES (#{name})
  </insert>

</mapper>
