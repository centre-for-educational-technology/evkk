<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ee.tlu.evkk.dal.dao.TextMaterialDao">
  <sql id="textMaterialColumns">
    mtype.id = tm_id,
    mtype.text = tm_text,
    mtype.word_count = tm_word_count,
    mtype.material_id = tm_material_id
  </sql>

  <resultMap id="TextMaterialResultMap" type="ee.tlu.evkk.dal.dto.FileMaterial">
    <id property="id" column="tm_id"/>
    <result property="text" column="tm_text"/>
    <result property="wordCount" column="tm_word_count"/>
    <result property="materialId" column="tm_material_id"/>
    <association property="material" resultMap="ee.tlu.evkk.dal.dao.MaterialDao.MaterialResultMap"/>
  </resultMap>

  <select id="findAllTextMaterials" resultMap="FileMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.TextMaterialDao.textMaterialColumns"/>,
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.text_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
  </select>

  <select id="findById" parameterType="string" resultMap="TextMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.TextMaterialDao.textMaterialColumns"/>,
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.text_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
    WHERE tm.id = #{id}
  </select>

  <insert id="insertTextMaterial" parameterType="ee.tlu.evkk.dal.dto.TextMaterial" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO core.text_material (
      text,
      word_count,
      material_id
    ) VALUES (
      #{text},
      #{wordCount},
      #{materialId}
    )
  </insert>

</mapper>
