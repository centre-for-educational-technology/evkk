<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ee.tlu.evkk.dal.dao.LinkMaterialDao">
  <resultMap id="LinkMaterialResultMap" type="ee.tlu.evkk.dal.dto.LinkMaterial">
    <id property="id" column="lm_id"/>
    <result property="url" column="lm_url"/>
    <result property="materialId" column="lm_material_id"/>
    <association property="material" resultMap="ee.tlu.evkk.dal.dao.MaterialDao.MaterialResultMap"/>
  </resultMap>

  <sql id="linkMaterialColumns">
    mtype.id AS lm_id,
    mtype.material_id AS lm_material_id,
    mtype.url AS lm_url
  </sql>

  <select id="findAllLinkMaterials" resultMap="LinkMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.LinkMaterialDao.linkMaterialColumns"/>,
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.link_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
  </select>

  <select id="findById" parameterType="string" resultMap="LinkMaterialResultMap">
    SELECT
    <include refid="ee.tlu.evkk.dal.dao.LinkMaterialDao.linkMaterialColumns"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociationColumns"/>
    FROM core.link_material mtype
    <include refid="ee.tlu.evkk.dal.dao.MaterialTypeDao.materialJoin"/>
    <include refid="ee.tlu.evkk.dal.dao.MaterialDao.materialAssociations"/>
    WHERE lm.id = #{id}
  </select>

  <insert id="insertLinkMaterial" parameterType="ee.tlu.evkk.dal.dto.LinkMaterial" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO core.link_material (
      url,
      material_id
    ) VALUES (
      #{url},
      #{materialId}
    )
  </insert>

</mapper>
