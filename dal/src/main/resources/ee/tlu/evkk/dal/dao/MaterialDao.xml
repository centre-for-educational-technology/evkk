<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ee.tlu.evkk.dal.dao.MaterialDao">

  <resultMap id="MaterialResultMap" type="ee.tlu.evkk.dal.dto.Material">
    <id property="id" column="id"/>
    <result property="title" column="title"/>
    <result property="createdAt" column="created_at"/>
    <result property="description" column="description"/>
    <result property="downloads" column="downloads"/>
    <result property="likes" column="likes"/>
    <result property="materialTypeId" column="material_type_id"/>
    <result property="languageLevelId" column="language_level_id"/>
    <result property="categoryId" column="category_id"/>
    <association property="materialType" resultMap="ee.tlu.evkk.dal.dao.MaterialTypeDao.MaterialTypeResultMap"/>
    <association property="languageLevel" resultMap="ee.tlu.evkk.dal.dao.LanguageLevelDao.LanguageLevelResultMap"/>
  </resultMap>

  <insert id="insertMaterial" parameterType="ee.tlu.evkk.dal.dto.Material" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO core.material (
      title,
      description,
      downloads,
      likes,
      created_at,
      material_type_id,
      language_level_id,
      category_id
    ) VALUES (
      #{title},
      #{description},
      #{downloads},
      #{likes},
      #{createdAt},
      #{materialTypeId},
      #{languageLevelId},
      #{categoryId}
    )
  </insert>

</mapper>
